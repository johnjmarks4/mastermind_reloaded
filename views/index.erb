<!DOCTYPE html>
<html>
	<body>
		<p>
			<% if @role == "codebreaker" || defined?(@guess) %>
				<%= @display %>
				<br>
				<%= @code %> (for testing purposes)
			<% elsif defined?(@code) %>
				<%= @code %>
				<%= @role %>
			<% end %>
			<% if defined?(@turn) %>
				<br><br>
				Turn: <%= @turn %>
			<% end %>
		</p>
		</br>
		<p>
			<% if not defined?(@turn) %>
			<form action = 'submit'>
				<input type='text' name='role' />
				<input type='submit' name='submit' />
			</form>
			<% elsif defined?(@turn) && @turn >= 14 || defined?(@message) && @message == "Code guessed correctly!" %>
			<form action = 'submit'>
				<input type = 'submit' name='start' />
			</form>
			<% elsif @role == "codemaker" && @turn == 1 %>
			<form action = 'submit'>
				<input type='text' name='code' />
				<input type='submit' name='Make Code!' />
			</form>
			<% elsif @role == "codebreaker" || defined?(@guess) %>
			<form action = 'submit'>
				<input type='text' name='guess' />
				<input type='submit' name='Make Guess!' />
			</form>
			<% end %>
		</p>
		<p>
			<%= @message %>
			<% if defined?(@guess) %>
				<br>
				Last guess: <%= @guess %>
			<% end %>
		</p>
	</body>
</html>